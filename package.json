{
  "name": "traductor-burocratico-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "check:types": "tsc --noEmit",
    "prebuild:llms": "node tools/generate-llms.js || node -e \"process.exit(0)\"",
    "build:vite": "vite build",
    "build": "npm run check:types && npm run prebuild:llms && npm run build:vite",
    "preview": "vite preview",
    "lint": "eslint \"{src,supabase,tools}/**/*.{ts,tsx,js,jsx}\"",
    "lint:md": "remark \"docs/**/*.md\" --frail --quiet",
    "lint:spelling": "cspell \"**/*.{md,mdx,ts,tsx,json}\" --config cspell.config.cjs",
    "test": "vitest",
    "test:run": "vitest run",
    "validate": "npm run lint && npm run lint:md && npm run lint:spelling && npm run check:types",
    "report:content": "tsx tools/report-content.ts",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.4",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@cspell/dict-companies": "^3.2.5",
    "@cspell/dict-es-es": "^3.0.8",
    "@cspell/dict-software-terms": "^5.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^8.56.10",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "commitizen": "^3.0.0",
    "cspell": "^8.16.1",
    "cz-git": "^1.9.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "execa": "^9.4.0",
    "globby": "^14.0.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.4.1",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-validate-links": "^12.1.1",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.8.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
"lint-staged": {
  "*.{ts,tsx,js,jsx}": [
    "eslint --fix --quiet --cache --cache-location node_modules/.cache/eslint",
    "prettier --write"
  ],
  "*.md": [
    "remark --quiet --output",
    "cspell --no-progress --no-must-find-files --relative",
    "prettier --write"
  ],
  "*.{json,css,mdx}": [
    "prettier --write"
  ]
},
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
